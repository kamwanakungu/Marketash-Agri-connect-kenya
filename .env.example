NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/agriconnect
MONGODB_TEST_URI=mongodb://localhost:27017/agriconnect_test

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_ACCESS_SECRET=your_super_secret_key_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# M-Pesa Daraja API
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/webhooks/mpesa
MPESA_B2C_SHORTCODE=your_b2c_shortcode
MPESA_B2C_INITIATOR=your_initiator_name
MPESA_B2C_SECURITY_CREDENTIAL=encrypted_credential

# Africa's Talking SMS
AT_USERNAME=sandbox
AT_API_KEY=your_api_key
AT_SENDER_ID=AGRICONNECT

# AWS S3 / Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=agriconnect-storage

# Encryption
ENCRYPTION_KEY=32_byte_hex_key_for_aes_256

# Google Maps (or alternative)
GOOGLE_MAPS_API_KEY=your_maps_key

# ElasticSearch
ELASTICSEARCH_NODE=http://localhost:9200

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100