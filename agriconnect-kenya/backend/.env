# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/agriconnect
MONGODB_TEST_URI=mongodb://localhost:27017/agriconnect_test

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your_super_secret_access_key_min_32_chars_change_now
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_chars_change_now
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption for PII (32-byte hex key for AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# M-Pesa Daraja API (Sandbox - Replace with production values)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key_from_daraja
MPESA_CONSUMER_SECRET=your_consumer_secret_from_daraja
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey_from_daraja
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/webhooks/mpesa/stk
MPESA_B2C_SHORTCODE=600000
MPESA_B2C_INITIATOR=testapi
MPESA_B2C_SECURITY_CREDENTIAL=your_encrypted_credential

# Africa's Talking SMS (Sandbox)
AT_USERNAME=sandbox
AT_API_KEY=your_africas_talking_api_key
AT_SENDER_ID=AGRICONNECT

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=agriconnect-storage

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ElasticSearch
ELASTICSEARCH_NODE=http://localhost:9200

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

